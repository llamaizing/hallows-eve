{
	"background": {
		"image": {
			"path": "default"
		}
	},
  "dialog_box":{
    "close_delay":0,
    "image":{
      "position":"center", 
      "path":"hud/dialog_box_background.png"
    },
    "text": {
      "max_displayed_lines": 4,
      "x_offset": 8,
      "y_offset": 14,
      "line_space": 14,
      "line": {
        "speed": "fast",
