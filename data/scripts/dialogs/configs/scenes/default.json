        "vertical_alignment": "middle",
        "font": "enter_command",
        "font_size": 16
      },
      "question": {
        "line_buffer": 7,
        "question_marker": "$?",
        "cursor_wrap": true,
        "cursor": {
          "image": {
            "path":"demo/hud/cursor/icons/individual_icons/book_04e.png",
            "x_offset": 0,
            "y_offset": -8
          }
        }
      }
    },
    "name_box": {
      "image": {
        "path": "hud/dialog_box_name.png",
        "position": "outsidetopleft"
      },
      "line": {
        "x_offset": 8,
        "y_offset": 7,
        "horizontal_alignment": "left",
        "vertical_alignment": "middle",
        "font": "enter_command",
        "font_size": 16 
      }
    }
  }
}